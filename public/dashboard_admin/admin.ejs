<!DOCTYPE html>
<html lang="en">
  <% include ../includes/dashboardHead %>
  <body>
    <style>
    .row {
          margin-top: 30px;
          margin-bottom: 30px
    }
    </style>
    <div id="app">

      <a href="/logout">Logout</a>
      
      <br />

      <h2>Welcome, <%- fullName %>.</h2>

      <div class="row">
        <div class="col">
          <br />
          <a href="/adminUsers">Add/Remove Administrators</a>
          <br />

          <br />
          <a href="/unregUsers">Add/Remove Unregistered Users</a>
          <br />

          <br />
            <a href="/regUsers">Add/Remove Registered Users</a>
          <br />

          <br />
            <a href="/props">Add/Remove Properties</a>
          <br />

          <br />
            <a href="/propImages">Add/Remove Property Images</a>
          <br />

        </div>
      </div>

      <hr />

      <div class="row">
        <div class="col-3">
          <h4>Unregistered Accounts:</h4>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="unregisteredTenant in unregisteredTenants">
              {{ unregisteredTenant.email }}
            </li>
          </ul>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="unregisteredTenant in unregisteredTenants">
              {{ unregisteredTenant.code }}
            </li>
          </ul>
        </div>
      </div>

      <hr />

      <div class="row">
        <div class="col-3">
          <h4>Registered Accounts:</h4>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="registeredTenant in registeredTenants">
              {{ registeredTenant.email }}
            </li>
          </ul>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="registeredTenant in registeredTenants">
              {{ registeredTenant.type }}
            </li>
          </ul>
        </div>
      </div>

      <hr />

      <div class="row">
        <div class="col-3">
          <h4>Properties:</h4>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="property in properties">
              {{ property.streetAddr }}
            </li>
          </ul>
        </div>

        <div class="col-3">
          <ul>
            <li v-for="property in properties">
              {{ property.rented }}
            </li>
          </ul>
        </div>
      </div>

    </div>

    <br />

    <% include ../includes/scripts %>
    <script src="/vue/vue.min.js"></script>
    <script>
      const app = new Vue({
        el: '#app',
        data: {
          unregisteredTenants: <%- JSON.stringify(unregisteredTenants) %>,
          registeredTenants  : <%- JSON.stringify(registeredTenants) %>,
          properties         : <%- JSON.stringify(properties) %>
        }
      });
    </script>
  </body>
</html>