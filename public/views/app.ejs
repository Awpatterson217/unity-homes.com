<!DOCTYPE html>
<html lang="en">
  <% include ../includes/head %>
  <body>
    <div class="container">

      <% include ../includes/nav %>

      <br />
    
      <div class="row ">
        <div class="col-md-12 text-center">
          <h3>Application For Rental</h3>
        </div>
      </div>

      <br />
      <br />

      <form class="container" id="needs-validation" novalidate>
          <div class="row">
            <div class="col-md-3 mb-3">
              <label for="firstName">First Name</label>
              <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="middleName">Middle Name</label>
              <input type="text" class="form-control" id="middleName" placeholder="Last Name" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 mb-3">
              <label for="dob">Date of Birth</label>
              <input type="text" class="form-control" id="dob" placeholder="XX/XX/XXXX" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="ssn">Social Security Number</label>
              <input type="text" class="form-control" id="ssn" placeholder="SSN #" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 mb-3">
              <label for="cAddress">Current Address</label>
              <input type="text" class="form-control" id="cAddress" placeholder="Address" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="cCity">Current City</label>
              <input type="text" class="form-control" id="cCity" placeholder="City" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 mb-3">
              <label for="cState">Current State</label>
              <input type="text" class="form-control" id="cState" placeholder="State" required>
            </div>
            <div class="col-md-2 mb-3">
              <label for="cZip">Current Zip</label>
              <input type="text" class="form-control" id="cZip" placeholder="Zip" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 mb-3">
              <label for="email">Email</label>
              <input type="text" class="form-control" id="email" placeholder="Email" required>
            </div>
            <div class="col-md-2 mb-3">
              <label for="cell">Phone Number</label>
              <input type="text" class="form-control" id="cell" placeholder="xxx-xxx-xxxx" required>
            </div>
          </div>
          <div class="text-center">
            <button class="btn btn-default" data-toggle="modal" data-target="#inactiveModal" type="submit">Submit</button>
            <button class="btn btn-secondary" data-toggle="modal" data-target="#inactiveModal" type="submit">Download</button>                        
          </div>
        </form>

        <br />

      </div>

    <% include ../includes/inactiveModal %>

    <% include ../includes/footer %>

    <script>
      // VALIDATION
      (function() {
        "use strict";
        window.addEventListener("load", function() {
          var form = document.getElementById("needs-validation");
          form.addEventListener("submit", function(event) {
            if (form.checkValidity() == false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          }, false);
        }, false);
      }());
    </script>
    
    <% include ../includes/scripts %>
  </body>
</html>