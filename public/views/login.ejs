<!DOCTYPE html>
<html lang="en">
  <% include ../includes/head %>

  <body>
    <div class="container">
      <% include ../includes/nav %>
      
      <% include ../includes/invalidLoginModal %>
      
      <br>

      <% if (!(typeof invalid == 'undefined')) { %>
        <% if (invalid) { %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-center">Invalid Username or Password!</h4>
          </div>      
      <% } %>
      <% } %>
      
      <div id='register'>
        <form class="container" action="/login" method="post">
          <h2 class="form-signin-heading">
            Login
          </h2>
          <div class="row">              
            <div class="col-md-12 mb-2  mt-3">
              <label for="email" class="sr-only">Email</label>              
              <input type="text" spellcheck="false" id="login-email" class="form-control form-control-warning" name="email" placeholder="Email" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-2">
              <label for="password" class="sr-only">Password</label>         
              <input type="password" id="login-password" class="form-control form-control-warning" name="password" placeholder="password" required>
            </div>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" id="remember" name="remember"> Remember me
            </label>
          </div>
          <button class="btn btn-md btn-default btn-block" type="submit">Login</button>
        </form>
      </div>
    </div>

    <% include ../includes/footer %>
    
    <% include ../includes/scripts %>
    <script src="/js/login.js"></script>
  </body>
</html>