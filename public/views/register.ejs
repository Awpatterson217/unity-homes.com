<!DOCTYPE html>
<html lang="en">
  <% include ../includes/head %>

  <body>
    <div class="container">
      <% include ../includes/nav %>

      <br />

      <div id='register'>
        <form class="container" action="/register" method="post">
          <h2 class="form-signin-heading">
            Register
          </h2>
          <div class="row">              
            <div class="col-md-12 mb-2 mt-3">
              <label for="code" class="sr-only">Registration Code</label>              
              <input type="text" class="form-control" name="code" placeholder="Registration Code" required autofocus>
            </div>
          </div>
          <div class="row">              
            <div class="col-md-12 mb-2">
              <label for="email" class="sr-only">Email</label>              
              <input type="text" class="form-control" name="email" placeholder="Email" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-2">
              <label for="password" class="sr-only">Password</label>         
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
          </div>
          <div class="row">  
            <div class="col-md-12 mb-2">
              <label for="passwordTwo" class="sr-only">Confirm Password</label>              
              <input type="password" class="form-control" name="passwordTwo" placeholder="Confirm Password" required>
            </div>
          </div>
          <button class="btn btn-md btn-default btn-block" type="submit">Login</button>
        </form>
      </div>

    </div>

    <% include ../includes/footer %>

    <% include ../includes/scripts %>

    <script src='/js/passwordPopover.js'></script>
  </body>
</html>