<!DOCTYPE html>
<html lang="en">
  <% include ../includes/head %>
  <body>
    <div class="container">

      <% include ../includes/nav %>

      <% include ../includes/inactiveModal %>

      <br />

      <div id='register'>
        <form class="container" action="/registerUser" method="post" id="needs-validation" novalidate>
          <h2 class="form-signin-heading">
            Register
          </h2>
          <div class="row">              
            <div class="col-md-12 mb-2">
              <label for="code" class="sr-only">Registration Code</label>              
              <input type="text" class="form-control" id="code" placeholder="Registration Code" required autofocus>
            </div>
          </div>
          <div class="row">              
            <div class="col-md-12 mb-2">
              <label for="email" class="sr-only">Email</label>              
              <input type="text" class="form-control" id="email" placeholder="Email" required>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-2">
              <label for="password" class="sr-only">Password</label>         
              <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
          </div>
          <div class="row">  
            <div class="col-md-12 mb-2">
              <label for="confirmPassword" class="sr-only">Confirm Password</label>              
              <input type="password" class="form-control" id="confirmPassword"  placeholder="Confirm Password" required>
            </div>
          </div>
          <div class="text-center">
            <button class="btn btn-default" data-toggle="modal" data-target="#inactiveModal" type="submit">Submit</button>
          </div>
        </form>
      </div>

    </div>

    <% include ../includes/footer %>

    <% include ../includes/scripts %>
        <script>
      // VALIDATION
      (function() {
        "use strict";
        window.addEventListener("load", function() {
          var form = document.getElementById("needs-validation");
          form.addEventListener("submit", function(event) {
            if (form.checkValidity() == false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          }, false);
        }, false);
      }());
    </script>
    <script src='/js/passwordPopover.js'></script>
  </body>
</html>